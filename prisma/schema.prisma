generator client {
 provider = "prisma-client-js"
}
datasource db {
 provider = "postgresql"
 url = env("DATABASE_URL")
} 

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  firstName    String
  lastName     String?
  photo        String?
  notes        Note[]
}

model Color {
  id            Int   @id @default(autoincrement())
  colorValue    String
  notes         Note[]
}

model Background {
  id                  Int   @id @default(autoincrement())
  backgroundValue     String
  notes               Note[]
}

model Font{
  id            Int       @id @default(autoincrement())
  fontName      String
  fontFamily    String
  notes         Note[]
}

model Tag{
  id            Int       @id @default(autoincrement())
  tagName       String    @unique
  description   String?
  notes         Note[]
}

model Note{
  id            Int           @id @default(autoincrement())
  title         String
  description   String?
  isImportant   Boolean       @default(false)
  tag           Tag           @relation(fields: [tagId], references: [id])
  tagId         Int
  user          User          @relation(fields: [userId], references: [id])
  userId        Int
  color         Color         @relation(fields: [colorId], references: [id])
  colorId       Int
  background    Background    @relation(fields: [backgroundId], references: [id])
  backgroundId  Int
  font          Font          @relation(fields: [fontId], references: [id])
  fontId        Int
}